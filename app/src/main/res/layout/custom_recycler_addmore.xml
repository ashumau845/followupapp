<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shapebackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/img_edit_view"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/img_delete_view"
            android:src="@drawable/ic_edit_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_delete_view"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black_24dp"
            android:visibility="visible" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_datacode"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_view_dateCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problem Reported"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp" />



        <TextView
            android:layout_weight="1"
            android:id="@+id/txt_problem_content"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:maxLines="3"
            android:layout_height="0dp"
            android:text="Data Code fghxfgf dgadsg dsgdsgadsgadsaggadsgdsgdsgdsg"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_diagnosed"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Diagnosed Taken"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:id="@+id/txt_diagnosed_content"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data  dsgaddsafa bhrdsfhb dafbfdabdfaa bbfva dfabfdbs dasgdsgadsagdsag"
            android:textSize="18sp" />

    </LinearLayout>







</LinearLayout>

